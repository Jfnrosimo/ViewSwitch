<Application
    x:Class="ViewSwitch.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:ViewSwitch"
    xmlns:view="clr-namespace:ViewSwitch.MVVM.View"
    xmlns:viewModel="clr-namespace:ViewSwitch.MVVM.ViewModel">
    <Application.Resources>

        <DataTemplate DataType="{x:Type TypeName=viewModel:HomeViewModel}">
            <view:HomeView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModel:SettingsViewModel}">
            <view:SettingsView />

        </DataTemplate>
    </Application.Resources>
</Application>
